    "default_value": "reddit_dep",
    "description": "Path to dataset to use for training",
    "valid_values": ["reddit_dep", "acl_dep_sad"]
  },
  "model_name": {
    "default_value": "bert_tiny",
    "description": "Name of the model to save",
    "valid_values": "Any valid string"
